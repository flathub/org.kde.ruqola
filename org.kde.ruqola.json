{
    "id": "org.kde.ruqola",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "ruqola",
    "rename-icon": "ruqola",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.kde.kwalletd5"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsecret/0.21/libsecret-0.21.6.tar.xz",
                    "sha256": "747b8c175be108c880d3adfb9c3537ea66e520e4ad2dccf5dce58003aeeca090",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libsecret",
                        "stable-only": true
                    }
                }
            ],
            "config-opts": [
                "-Dcrypto=disabled",
                "-Dgtk_doc=false",
                "-Dintrospection=false",
                "-Dmanpage=false",
                "-Dvapi=false"
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DBUILD_TRANSLATIONS=NO",
                "-DBUILD_WITH_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4138,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "ktextaddons",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/ktextaddons/ktextaddons-1.5.4.tar.xz",
                    "sha256": "64b80602e84b25e9164620af3f6341fa865b85e826ab8f5e02061ae24a277b20",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 351168,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/ktextaddons/ktextaddons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "ruqola",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DQT_MAJOR_VERSION=6"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/ruqola/ruqola-2.3.2.tar.xz",
                    "sha256": "57c8ff6fdeb4aba286425a1bc915db98ff786544a3ada9dec39056ca4b587837",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 272939,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/ruqola/ruqola-$version.tar.xz"
                    }
                }
            ],
            "cleanup": [
                "/share/qlogging-categories5"
            ]
        }
    ]
}
