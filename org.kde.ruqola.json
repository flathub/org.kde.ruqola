{
    "id": "org.kde.ruqola",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "ruqola",
    "rename-icon": "ruqola",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.kde.kwalletd5"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsecret/0.20/libsecret-0.20.5.tar.xz",
                    "sha256": "3fb3ce340fcd7db54d87c893e69bfc2b1f6e4d4b279065ffe66dac9f0fd12b4d",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libsecret",
                        "stable-only": true
                    }
                }
            ],
            "config-opts": [
                "-Dgcrypt=false",
                "-Dgtk_doc=false",
                "-Dintrospection=false",
                "-Dmanpage=false",
                "-Dvapi=false"
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/v0.13.2.tar.gz",
                    "sha256": "20beeb32de7c4eb0af9039b21e18370faf847ac8697ab3045906076afbc4caa5",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4138,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/v$version.tar.gz"
                    }
                }
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DBUILD_TRANSLATIONS=NO"
            ]
        },
        {
            "name": "ruqola",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/ruqola/ruqola-1.7.4.tar.xz",
                    "sha256": "f55f146651fb5f0f34a6b204f4d71b2baac9f6f93f0b8cb7423012b1ae55a93d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 272939,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/ruqola/ruqola-$version.tar.xz"
                    }
                },
                {   "type": "patch",
                    "path": "0001-Add-missing-releases-to-appstream.patch"
                }
            ],
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "cleanup": [
                "/share/qlogging-categories5"
            ]
        }
    ]
}
