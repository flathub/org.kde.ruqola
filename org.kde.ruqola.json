{
    "id": "org.kde.ruqola",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "ruqola",
    "rename-icon": "ruqola",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.kde.kwalletd5"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsecret/0.20/libsecret-0.20.5.tar.xz",
                    "sha256": "3fb3ce340fcd7db54d87c893e69bfc2b1f6e4d4b279065ffe66dac9f0fd12b4d",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libsecret",
                        "stable-only": true
                    }
                }
            ],
            "config-opts": [
                "-Dgcrypt=false",
                "-Dgtk_doc=false",
                "-Dintrospection=false",
                "-Dmanpage=false",
                "-Dvapi=false"
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/v0.14.0.tar.gz",
                    "sha256": "ad78f2d9e0a5ee80f40cbaace4f55d11c2557bc6e930cf4a9479e39a7d78bb60",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4138,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/v$version.tar.gz"
                    }
                }
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DBUILD_TRANSLATIONS=NO"
            ]
        },
        {
            "name": "ruqola",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/ruqola/ruqola-1.9.1.tar.xz",
                    "sha256": "a01b5272ec6ca2b1711098e1dc8d60df77972de5dfe57613dab6d4d412e1b931",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 272939,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/ruqola/ruqola-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "0001-Don-t-disable-deprecated-KF5-API.patch"
                }
            ],
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "cleanup": [
                "/share/qlogging-categories5"
            ]
        }
    ]
}
